generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Trip {
  id          String     @id @default(cuid())
  title       String     @unique
  location    String
  description String
  from        DateTime
  to          DateTime
  tripItems   TripItem[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model TripItem {
  id          String    @id @default(cuid())
  name        String
  address     String
  activity    String
  description String
  price       Float
  trip        Trip      @relation(fields: [tripId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  tripId      String
  media       String[]
  from        DateTime?
  to          DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([name, tripId])
}
